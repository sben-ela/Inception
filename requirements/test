version: '3'

volumes:
    mysql_data:
    file:
        driver: local

services:
    nginx:
        build: ./nginx
        container_name: nginx
        image: nginx
        ports:
            - "443:443"
        depends_on:
            - wordpress
        volumes:
            - file:/var/www
        restart: always

    database:
        image: mysql:5.7
        volumes:
            - mysql_data:/var/lib/mysql
        restart: always
        environment:
            MYSQL_ROOT_PASSWORD: mypassword
            MYSQL_DATABASE: wordpress
            MYSQL_USER: wordpressuser
            MYSQL_PASSWORD: wordpress
        ports:
            - "3306:3306"

    wordpress:
        depends_on:
            - database
        image: wordpress:latest
        volumes:
            - file:/var/www
        ports:
            - "8080:80"
        restart: always
        environment:
            WORDPRESS_DB_HOST: my-mariadb
            WORDPRESS_DB_USER: wp_user
            WORDPRESS_DB_PASSWORD: wp_password
            WORDPRESS_DB_NAME: wordpress